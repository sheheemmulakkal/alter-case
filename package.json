{
  "name": "alter-case",
  "version": "1.0.1",
  "description": "A versatile npm package for converting text to different casing styles, including lowercase, uppercase, title case, and sentence case.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "clean": "del-cli ./build/*",
    "build": "npm run clean && tsc",
    "start": "ts-node-dev ./src/index.ts",
    "prepack": "npmignore --auto"
  },
  "publishConfig": {
    "ignore": [
      "!build/",
      "src/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheheemmulakkal/alter-case"
  },
  "bugs": {
    "url": "https://github.com/sheheemmulakkal/alter-case/issues"
  },
  "keywords": [
    "altercase",
    "lowercase",
    "uppercase",
    "title case",
    "sentence case",
    "text-transform",
    "case style",
    "text transform",
    "text format",
    "text style"
  ],
  "author": "Muhammed Sheheem shaimonsheheem@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "del-cli": "^5.1.0",
    "npmignore": "^0.3.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/node": "^20.11.5",
    "ts-node-dev": "^2.0.0"
  }
}
